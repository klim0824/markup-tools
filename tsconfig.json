{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2018",
		"sourceMap": true,
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"rootDir": "./",
		"baseUrl": "./src",
		"paths": {
			"@/*": ["./*"]
		},
		"types": ["@types/node"]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
