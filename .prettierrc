{
	"printWidth": 100,
	"singleQuote": true,
	"useTabs": true,
	"overrides": [
		{
			"files": ["*.pug"],
			"options": {
				"singleQuote": false
			}
		}
	],
	"pugSortAttributesBeginning": [
		"^:?class$",
		"^:?id$",
		"^:?name$",
		"^:?data-",
		"^:?src$",
		"^:?for$",
		"^:?type$",
		"^:?href$",
		"^:?value$",
		"^:?title$",
		"^:?alt$",
		"^:?role$",
		"^:?aria-",
		"^:?tabindex$",
		"^:?style$"
	],
	"pugSortAttributesEnd": [
		"^:(?!(width|height|loading|disabled|data-))",
		"^target$",
		"^:?width$",
		"^:?height$",
		"^:disabled$"
	]
}
