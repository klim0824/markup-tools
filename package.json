{
	"name": "markup-tools",
	"version": "0.0.1",
	"license": "MIT",
	"private": true,
	"description": "Project to study frontend development tools",
	"author": "klim <klim0824@live.jp> (https://github.com/klim0824/)",
	"homepage": "https://github.com/klim0824/markup-tools",
	"repository": {
		"type": "git",
		"url": "git+ssh://git@github.com/klim0824/markup-tools.git"
	},
	"scripts": {
		"start": "npm run dev",
		"dev": "npm-run-all --sequential build --parallel server watch",
		"build": "npm-run-all --sequential clean --parallel build:*",
		"build:template": "eleventy",
		"build:style": "npm-run-all --sequential build:style:sass build:style:postcss",
		"build:style:sass": "sass --no-source-map src/assets/style:dist/assets/style",
		"build:style:postcss": "postcss dist/assets/style --dir dist/assets/style",
		"build:script": "webpack --mode production",
		"clean": "rimraf dist",
		"format": "prettier .",
		"format:fix": "prettier --write .",
		"lint": "npm-run-all --parallel lint:*",
		"lint:script": "eslint --ext .js,.ts .",
		"lint:type": "tsc --noEmit",
		"server": "browser-sync start --config 'bs-config.js'",
		"watch": "npm-run-all --parallel watch:*",
		"watch:template": "eleventy --watch",
		"watch:style": "npm-run-all --sequential build:style:sass --parallel watch:style:sass watch:style:postcss",
		"watch:style:sass": "sass --watch --no-source-map src/assets/style:dist/assets/style",
		"watch:style:postcss": "postcss dist/assets/style --dir dist/assets/style --watch --no-map",
		"watch:script": "webpack --watch"
	},
	"dependencies": {
		"sanitize.css": "^13.0.0"
	},
	"devDependencies": {
		"@11ty/eleventy": "^2.0.0",
		"@prettier/plugin-pug": "^2.4.2",
		"@types/node": "^18.15.9",
		"@typescript-eslint/eslint-plugin": "^5.56.0",
		"@typescript-eslint/parser": "^5.56.0",
		"browser-sync": "^2.29.1",
		"eslint": "^8.36.0",
		"eslint-config-prettier": "^8.8.0",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.21",
		"postcss-cli": "^10.1.0",
		"postcss-sorting": "^8.0.2",
		"prettier": "^2.8.7",
		"rimraf": "^4.4.1",
		"sass": "^1.60.0",
		"ts-loader": "^9.4.2",
		"typescript": "^5.0.2",
		"webpack": "^5.77.0",
		"webpack-cli": "^5.0.1"
	}
}
