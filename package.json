	"license": "MIT",
	"main": "index.js",
	"private": true,
	"description": "Project to study frontend development tools",
	"author": "klim <klim0824@live.jp> (https://github.com/klim0824/)",
	"homepage": "https://github.com/klim0824/markup-tools",
	"repository": {
		"type": "git",
		"url": "git+ssh://git@github.com/klim0824/markup-tools.git"
	},
	"scripts": {
		"build:template": "eleventy",
		"build:style": "sass src/assets/style:dist/assets/style",
		"typeCheck": "tsc --noEmit",
		"lint:js": "eslint --ext .js,.ts .",
		"lint:js:fix": "eslint --fix --ext .js,.ts .",
		"lint:code": "prettier .",
		"lint:code:fix": "prettier --write .",
		"lint": "npm run lint:js && npm run lint:code",
		"lint:fix": "npm run lint:js:fix && npm run lint:code:fix",
		"watch:template": "eleventy --serve"
	},
	"devDependencies": {
		"@11ty/eleventy": "^2.0.0",
		"@prettier/plugin-pug": "^2.4.2",
		"@types/node": "^18.15.9",
		"@typescript-eslint/eslint-plugin": "^5.56.0",
		"@typescript-eslint/parser": "^5.56.0",
		"eslint": "^8.36.0",
		"eslint-config-prettier": "^8.8.0",
		"prettier": "^2.8.7",
		"sass": "^1.60.0",
		"typescript": "^5.0.2"
	}
}
